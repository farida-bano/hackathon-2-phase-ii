# Backend Environment Variables Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# Database Connection
NEON_DATABASE_URL=postgresql://user:password@host/database?sslmode=require&channel_binding=require

# Authentication
AUTH_SECRET=your-super-secret-key-minimum-32-characters-long

# CORS Configuration
FRONTEND_URL=https://your-project-name.vercel.app

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Environment
ENVIRONMENT=production
LOG_LEVEL=info

# Database Pool Settings (optional, defaults configured)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
